<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:grepsound="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="1dp"
        card_view:cardCornerRadius="5dp">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

        <ImageView
                android:id="@+id/playlist_cover"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"/>

        <com.grepsound.views.TypefaceTextView
                android:id="@+id/playlist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/playlist_cover"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textStyle="bold"
                grepsound:customTypeface="fonts/Roboto-Thin.ttf"/>

        <com.grepsound.views.TypefaceTextView
                android:id="@+id/playlist_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_below="@+id/playlist_name"
                android:layout_toRightOf="@+id/playlist_cover"
                android:singleLine="true"
                android:textAppearance="@android:style/TextAppearance.Medium"
                grepsound:customTypeface="fonts/Roboto-Thin.ttf"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>