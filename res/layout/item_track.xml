<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:musical="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="5dp">

    <ImageView android:id="@+id/track_cover"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:layout_alignParentTop="true"
               android:layout_alignParentLeft="true"/>

    <com.grepsound.views.TypefaceTextView
            android:id="@+id/track_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/track_cover"
            android:layout_toLeftOf="@+id/download_button"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textStyle="bold"
            musical:customTypeface="fonts/Roboto-Thin.ttf"/>

    <com.grepsound.views.TypefaceTextView
            android:id="@+id/track_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_below="@+id/track_name"
            android:layout_toRightOf="@+id/track_cover"
            android:singleLine="true"
            android:textAppearance="@android:style/TextAppearance.Medium"
            musical:customTypeface="fonts/Roboto-Thin.ttf"/>


    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/download_button"
            android:src="@drawable/ic_action_make_available_offline"/>

</RelativeLayout>