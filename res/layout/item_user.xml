<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:musical="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black">


    <ImageView
        android:id="@+id/user_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/user_cover"
        android:background="#DDFFFFFF"
        android:orientation="vertical"
        android:weightSum="2"
        android:padding="5dp">

        <com.grepsound.views.TypefaceTextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:maxLines="2"
            android:textSize="30sp"
            musical:customTypeface="fonts/Roboto-Thin.ttf"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2">

            <com.grepsound.views.TypefaceTextView
                android:id="@+id/user_num_albums"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="20sp"
                musical:customTypeface="fonts/Roboto-Thin.ttf"/>

            <com.grepsound.views.TypefaceTextView
                android:id="@+id/user_num_tracks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="20sp"
                musical:customTypeface="fonts/Roboto-Thin.ttf"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
